extends layout

block content
    -if(typeof(venue[0]) !== 'undefined'){
    .row
        div.col-md-12.divForVenueName
          a.h1.logofont(href='/venue/#{venue[0]._id}')=venue[0].name+' »'
        .row
        div.col-md-8.column
          img.venueMap(src="#{venue[0].map}")
          .row
            .col-md-12.column
              .row
                hr
                .col-md-4
                  p Likes: #{venue[0].like} 
                  p Building: #{venue[0].building}
                .col-md-4
                  p Score: #{venue[0].score}
                  -if(venue[0].telephone != '')
                    p Phone: #{venue[0].telephone}
                .col-md-4
                  a.btn.btn-lg.btn-primary.fill-width(href='/direction/#{venue[0]._id}') Get direction »

        if (venue.length > 1)
          .col-md-4.column.container
            .row
              h4.divForAlsoLike="You might also like:"
              .col-md-12.column.divForSmallVenue
                a.h3.logofont(href='/venue/#{venue[1]._id}')=venue[1].name+' »'
                br
                br
                p Likes: #{venue[1].like} 
                p Score: #{venue[1].score}
                p Building: #{venue[1].building}
                -if(venue[1].telephone != '')
                  p Phone: #{venue[1].telephone}
                a.btn.btn-lg.btn-dark.fill-width(href='/direction/#{venue[1]._id}') Get direction
              .col-md-12.column.divForSmallVenue
                a.h3.logofont(href='/venue/#{venue[2]._id}')=venue[2].name+' »'
                br
                br
                p Likes: #{venue[2].like}
                p Score: #{venue[2].score}
                p Building: #{venue[2].building}
                -if(venue[2].telephone != '')
                p Phone: #{venue[2].telephone}
                a.btn.btn-lg.btn-dark.fill-width(href='/direction/#{venue[2]._id}') Get direction
    -}
    -else{
      h2.marginBottom Please select at least ONE categoty!
      .row
        .col-md-2
        .col-md-8
          img.fitdivimg.marginBottom(src='/image/noSelectionErrorPage.jpg')
      .row
        .col-md-4
        .col-md-4
          .row
            .col-md-4
            .col-md-4
              a.btn.btn-primary.marginBottom(href='/level') Back »
    -}
