extends layout

block content
  h3
    #tips
      for tip in tips
        .page-header
        h2 #{tip.venue.name} 
        p #{tip.content}
        p #{tip.date}
        form(action='/history/delete', method='POST')
          input(type='hidden', name='_csrf', value=_csrf)
          .form-group
            .col-sm-4
              input.form-control(type='hidden', name='tip_id', id='tip_id', value='#{tip._id}')
              button.btn.btn-danger(type='submit')
                span.ion-trash-b
                | Delete

        //-h2
          | Venue: #{tip.name}
        //-h3
          | Tip: #{tip.tip}
        //-p 
          | Time: #{tip.date}
