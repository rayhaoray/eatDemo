extends layout

block title
link(href='css/style.css', rel='stylesheet')

block content
  h3
    #{tips[0].email}
      #tips
        for tip in tips
          .page-header
          h2 #{tip.name} 
          p #{tip._id}
          p #{tip.tip}
          p #{tip.date}
          form(action='/history/delete', method='POST')
            input(type='hidden', name='_csrf', value=_csrf)
            .form-group
              .col-sm-4
                input.form-control(type='text', name='tip_id', id='tip_id', value='#{tip._id}')
                button.btn.btn-danger(type='submit')
                  span.ion-trash-b
                  | Delete

          //-h2
            | Venue: #{tip.name}
          //-h3
            | Tip: #{tip.tip}
          //-p 
            | Time: #{tip.date}
